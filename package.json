{
  "name": "mono-make",
  "productName": "Monomake-UI",
  "version": "1.0.0",
  "description": "Mono utility for OpenMono command line tools, like monomake and monoprog",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js --debug=5858",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "build --dir",
    "dist": "build",
    "postinstall": "bower install"
  },
  "node-debugger": {
    "nodePath": "electron",
    "nodeArgs": "main.js"
  },
  "author": {
    "name": "Monolit ApS",
    "email": "contact@openmono.com",
    "url": "http://developer.openmono.com/"
  },
  "license": "MIT",
  "dependencies": {
    "electron-json-storage": "^2.1.0",
    "promise": "^7.1.1"
  },
  "devDependencies": {
    "bower": "^1.8.0",
    "jslint": "^0.10.3",
    "electron-builder": "^8.6.0",
    "electron": "^1.4.8"
  },
  "build": {
    "asar": true,
    "appId": "dk.monolit.openmono.monomake-ui",
    "mac": {
      "category": "public.app-category.utilities",
      "target": "zip"
    },
    "win": {
      "target": "zip"
    },
    "linux": {
      "category": "Development",
      "target": "deb"
    },
    "protocols": {
      "name": "MonoKiosk ELF file install URL",
      "role": "Viewer",
      "schemes": [
        "openmono"
      ]
    },
    "fileAssociations": [{ 
      "ext": "elf",
      "name": "Mono Application",
      "role": "Viewer"
    }]
  }
}
